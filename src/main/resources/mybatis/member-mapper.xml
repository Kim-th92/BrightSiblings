<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace = "member">
	
	<select id = "login" parameterType="memberDto" resultType="memberDto">
		select * from member where member_id=#{member_id}
	</select>
	
	<select id ="idchk" parameterType="String" resultType="String">
		select member_id from member where member_id = #{member_id}
	</select>
	
	<select id="snslogin" parameterType="memberDto" resultType="memberDto">
		select * from member where member_email = #{member_email}
	</select>
		
	<insert id="register" parameterType="memberDto">
		 <![CDATA[
		INSERT INTO MEMBER (member_no,member_id,member_pw,member_name,member_email,member_phone,member_birthday,member_zipcode,
		member_firstaddr,member_secondaddr,member_regdate,member_profile,member_role,member_delflag) VALUES
		(memberseq.nextval, #{member_id}, #{member_pw}, #{member_name}, #{member_email}, #{member_phone},#{member_birthday},#{member_zipcode},
		#{member_firstaddr},#{member_secondaddr},SYSDATE,
		'https://uwosh.edu/deanofstudents/wp-content/uploads/sites/156/2019/02/profile-default.jpg'
		,'member','N') ]]>
	</insert>
	
	<insert id="snsloginregister" parameterType="memberDto">
	 <![CDATA[
		INSERT INTO MEMBER (member_no,member_id,member_name,member_email,member_regdate,member_profile,member_role,member_delflag)
		values (memberseq.nextval,#{member_id},#{member_name},#{member_id},SYSDATE,'https://uwosh.edu/deanofstudents/wp-content/uploads/sites/156/2019/02/profile-default.jpg'
		,'member','N')
	]]>
	</insert>
	
	
	
	<update id ="updateProfile" parameterType="memberDto">
	
	</update>
</mapper>
